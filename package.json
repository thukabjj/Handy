{
  "name": "dictum-app",
  "private": true,
  "version": "0.6.11",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write . && cd src-tauri && cargo fmt",
    "format:check": "prettier --check . && cd src-tauri && cargo fmt -- --check",
    "format:frontend": "prettier --write .",
    "format:backend": "cd src-tauri && cargo fmt",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:rust": "cd src-tauri && cargo test",
    "test:all": "vitest run && cd src-tauri && cargo test",
    "e2e": "playwright test --config=e2e/playwright.config.js",
    "e2e:ui": "playwright test --config=e2e/playwright.config.js --ui",
    "e2e:headed": "playwright test --config=e2e/playwright.config.js --headed",
    "e2e:wdio": "wdio run e2e/wdio.conf.js",
    "e2e:build": "cd src-tauri && cargo build --release",
    "dev:e2e": "vite --config e2e/vite.config.e2e.ts"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.16",
    "@tauri-apps/api": "^2.9.0",
    "@tauri-apps/plugin-autostart": "~2.5.1",
    "@tauri-apps/plugin-clipboard-manager": "~2.3.2",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-fs": "~2.4.4",
    "@tauri-apps/plugin-global-shortcut": "~2.3.1",
    "@tauri-apps/plugin-opener": "^2.5.2",
    "@tauri-apps/plugin-os": "~2.3.2",
    "@tauri-apps/plugin-process": "~2.3.1",
    "@tauri-apps/plugin-sql": "~2.3.1",
    "@tauri-apps/plugin-store": "~2.4.1",
    "@tauri-apps/plugin-updater": "~2.9.0",
    "fuse.js": "^7.1.0",
    "i18next": "^25.7.2",
    "immer": "^11.1.4",
    "lucide-react": "^0.542.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^16.4.1",
    "react-select": "^5.8.0",
    "sonner": "^2.0.7",
    "tailwindcss": "^4.1.16",
    "tauri-plugin-macos-permissions-api": "2.3.0",
    "wavesurfer.js": "^7.12.1",
    "zod": "^3.25.76",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tauri-apps/cli": "^2.9.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.9.1",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@types/react-select": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "@wdio/cli": "^9.23.2",
    "@wdio/local-runner": "^9.23.2",
    "@wdio/mocha-framework": "^9.23.2",
    "@wdio/spec-reporter": "^9.23.2",
    "eslint": "^9.39.1",
    "eslint-plugin-i18next": "^6.1.3",
    "happy-dom": "^20.3.1",
    "prettier": "^3.6.2",
    "typescript": "~5.6.3",
    "vite": "^6.4.1",
    "vitest": "^4.0.17",
    "webdriverio": "^9.23.2"
  }
}
